<div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top">
  <%= link_to root_path, class: "navbar-brand" do %>
    <i class="fas fa-globe" id="logo" style="font-size: 25px;"></i>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to "HOME", root_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "POST YOUR COUNTRY", new_country_path, class: "btn btn-ghost" %>
      </li>
      <li class="nav-item dropdown">
        <% if user_signed_in? %>
          <%= image_tag "https://f0.pngfuel.com/png/782/114/profile-icon-png-clip-art.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% else %>
          <%= link_to "LOG IN", new_user_session_path, class: "btn btn-ghost-square" %>
          <%= link_to "SIGN UP", new_user_registration_path, class: "btn btn-ghost-square" %>
        <% end %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <% unless user_signed_in? %>
            <%= link_to "SIGN IN", new_user_session_path, class: "dropdown-item" %>
          <% end %>
          <%= link_to "SEE ALL", countries_path, class: "dropdown-item" %>
          <% if user_signed_in? %>
            <%= link_to "MY BOOKINGS", bookings_path, class: "dropdown-item" %>
            <%= link_to "LOG OUT", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            <p class="dropdown-item" style="font-size: 14px; color: grey;"> <em><%=current_user.first_name%> <%=current_user.last_name%></em></p>
          <% end %>
        </div>
      </li>
    </ul>
  </div>
</div>
