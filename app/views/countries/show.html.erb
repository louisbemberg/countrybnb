


<div class="container">
  <% if @country.photo.attached? %>
  <div class ="show-banner" style= "background-image: linear-gradient(rgba(0,0,0,0.15), rgba(0,0,0,0.8)), url('<%= cl_image_path @country.photo.key %>')">
<% else %>
<div class ="show-banner" style= "background-image: linear-gradient(rgba(0,0,0,0.15), rgba(0,0,0,0.8)), url('https://source.unsplash.com/1600x900/?map')">
<% end %>
  </div>
</div>

<div class="container">
  <div class="container-position">

    <h3 id="letter-space"> <strong><%= @country.name.upcase %></strong> </h3>
    <h3 id="letter-space"> Price per day: <%= @country.price_p_day %>$ </h3>
    <h5 id="letter-space"> <%= @country.description %> </h5>
  </div>
</div>
<div class="container">
  <h5><strong>Host:</strong> <%= @country.user.first_name%> <%= @country.user.last_name%></h5>
  <br>
  <%= link_to "Back to All Countries", countries_path, class: "btn-flat-RV" %>
</div>
<br>
<br>


<!-- DELETE BUTTON LOGIC : THE BUTTON APPEARS ONLY IF YOU'RE THE HOST-->
<% if current_user == @country.user %>
  <%= link_to "Delete #{@country.name}",
              country_path(@country),
              method: :delete,
              data: { confirm: "Are you sure?" },
              class: "btn-red" %>
<% else %>
  <p> (Insert the submit form here when ready) You're not allowed to delete this post mate :) <3 </p>
<% end %>
