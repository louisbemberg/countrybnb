


<div class="container">
  <% if @country.photo.attached? %>
    <div class ="show-banner" style= "background-image: linear-gradient(rgba(0,0,0,0.05), rgba(0,0,0,0.1)), url('<%= cl_image_path @country.photo.key %>')">
      <%= link_to countries_path do  %>
        <i class="fas fa-angle-double-left go-back-button"></i>
      <% end %>
    </div>
  <% else %>
    <div class ="show-banner" style= "background-image: linear-gradient(rgba(0,0,0,0.15), rgba(0,0,0,0.8)), url('https://source.unsplash.com/1600x900/?map')">

    </div>
  <% end %>
</div>

  <div class="container" style="margin-top: 20px;">
    <div class="bottom-border">
      <h1 id="letter-space" class="title"> <strong><%= @country.name.upcase %></strong> </h1>
      <div class="d-flex justify-content-between">
        <h3 id="letter-space" class="right"> <strong><%= @country.price_p_day %></strong><i class="fas fa-euro-sign"></i> / day</h3>
        <% if current_user == @country.user %>
          <%= link_to "Delete #{@country.name}",
                        country_path(@country),
                        method: :delete,
                        data: { confirm: "Are you sure?" },
                        class: "btn-red" %>
        <% end %>
      </div>
    </div>
    <br>
    <div class="bottom-border">
      <h5 id="letter-space"> <%= @country.description %> </h5>
      <h5><strong><i class="fas fa-user"></i> </strong> <%= @country.user.first_name%> <%= @country.user.last_name%></h5>
      <i class="icon-user"></i>
    </div>
    <% if current_user != @country.user %>
      <div>
        <br>
        <br>

        <%= render "bookings/new" %>
        <br>
      </div>
    <% end %>
  <div id="map"
      style="width: 100%; height: 400px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
<br>








