<div class="container-box">
  <div class="cards-container">
    <% @countries.each do |country| %>
    <%= link_to country_path(country) do  %>
        <% if country.photo.attached? %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path country.photo.key %>');">
            <%= country.name %>
          </div>
        <% else %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/1600x900/?map)">
            <%= country.name %>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
  <%= image_tag "https://images.unsplash.com/photo-1516546453174-5e1098a4b4af?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=700&q=80", class:"map", alt: "map" %>
</div>








